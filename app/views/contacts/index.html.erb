<h1 class="contacts-header">Contacts</h1>
<div id="contacts">
  <div class="col-lg-8">
    <% @contacts.each do |contact| %>
      <div class="contact">
        <h2 class="name">
          <%= link_to contact.name, contact %>
        </h2>
          <%= link_to 'Edit', edit_contact_path(contact) %> |
          <%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>

<h1 class="agenda-header">Agenda</h1>
<div id="agenda">
  <div class="col-lg-4">
    <% @contacts.each do |contact| %>
      <div class="contact">
        <p>
          <% contact.conversations.each do |conversation| %>
          <ul>
            <li><%= conversation.follow_up_date.try(:strftime, "%B %d, %Y") %> <%= link_to contact.name, contact %></li>
          </ul>
          <% end %>
        </p>
      </div>


    <% end %>
  </div>
</div>














